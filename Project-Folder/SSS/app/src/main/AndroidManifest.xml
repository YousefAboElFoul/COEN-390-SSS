<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="coen390.nicholas.sss">

    <uses-feature android:name="android.hardware.bluetooth" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.BLUETOOTH_PRIVILEGED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/sssicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/sssicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:theme="@style/sssTheme1.NoActionBar"
            android:name=".Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"

            android:screenOrientation="portrait" />
        <activity
            android:name=".wordPageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".help"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Bluetooth"
            android:label="@string/title_activity_bluetooth"
            android:parentActivityName=".settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".tutorialActivitiy"
            android:screenOrientation="portrait" />
        <activity
            android:name=".testActivity"
            android:parentActivityName=".tutorialActivitiy"
            android:screenOrientation="portrait" />
    </application>

</manifest>