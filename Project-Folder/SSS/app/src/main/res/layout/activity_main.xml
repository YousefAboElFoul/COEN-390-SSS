<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    tools:context="coen390.nicholas.sss.MainActivity">

    <LinearLayout
        android:layout_width="364dp"
        android:layout_height="87dp"
        android:layout_marginTop="313dp"
        android:orientation="horizontal"
        android:weightSum="100"
        android:gravity="start"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/linearLayout3">


        <Button
            android:id="@+id/homeButton"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="73dp"
            android:layout_height="61dp"
            android:background="@color/background_grayish"
            android:text="HOME"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="12sp" />

        <Button
            android:id="@+id/translationButton"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="73dp"
            android:layout_height="61dp"
            android:background="@color/background_grayish"
            android:onClick="goTranslate"
            android:text="TALK"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />

        <Button
            android:id="@+id/tutorialButton"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="73dp"
            android:layout_height="61dp"
            android:background="@color/background_grayish"
            android:onClick="goTutorial"
            android:text="TUTORIAL"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />

        <Button
            android:id="@+id/helpButton"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="73dp"
            android:layout_height="61dp"
            android:background="@color/background_grayish"
            android:onClick="goHelp"
            android:text="HELP"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />

        <Button
            android:id="@+id/settingsButton"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="73dp"
            android:layout_height="61dp"
            android:background="@color/background_grayish"
            android:onClick="goSettings"
            android:text="SETTINGS"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="358dp"
        android:layout_height="450dp"
        app:srcCompat="@mipmap/sssicon"
        tools:layout_editor_absoluteX="2dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="331dp"
        android:layout_height="96dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="38dp"
        android:fontFamily="serif-monospace"
        android:text="SIGN SOUND SEE"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

</android.support.constraint.ConstraintLayout>
